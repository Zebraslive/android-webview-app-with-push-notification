<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/colorPrimaryDark</item>

        <!-- color of the menu overflow icon -->
        <item name="android:textColorSecondary">@color/colorPrimaryDark</item>
    </style>

    <style name="CustomActionBarTheme"
        parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="android:actionMenuTextColor">@color/colorPrimary</item>
        <item name="colorAccent">#961E51</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="actionMenuTextColor">@color/colorPrimary</item>

        <item name="drawerArrowStyle">@style/DrawerIconStyle</item>



        <!-- navigation icon color -->
        <item name="colorControlNormal">@color/colorPrimaryDark</item>

        <!-- color of the menu overflow icon -->
        <item name="android:textColorSecondary">@color/colorPrimaryDark</item>


    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse" >
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>

        <!-- Support library compatibility -->
        <item name="background">@color/colorPrimary</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>

        <!-- Support library compatibility -->



        <item name="navigationIcon">@drawable/item_bg</item>

        <item name="homeAsUpIndicator">@drawable/item_bg</item>







    </style>





    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <!-- ActionBar tabs text -->
    <style name="MyActionBarTabText"
        parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>


















    <style name="DrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorPrimaryDark</item>
    </style>









</resources>